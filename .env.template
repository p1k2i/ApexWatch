# ===================
# SECURITY
# ===================

# Internal API Access Key - CHANGE IN PRODUCTION!
ACCESS_KEY=apexwatch-secret-key-change-in-production

# Dashboard JWT Secret - CHANGE IN PRODUCTION!
JWT_SECRET_KEY=dashboard-jwt-secret-change-in-production

# ===================
# BLOCKCHAIN
# ===================

# Alchemy API Key (required for Ethereum monitoring)
# Get your key at: https://www.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Ollama URL (if using Ollama LLM)
OLLAMA_URL=http://ollama:11434

# Ethereum RPC URL (if using custom endpoint)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/

# ===================
# LLM CONFIGURATION
# ===================

# OpenAI API Key (optional, for fallback)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Primary LLM provider: ollama or openai
LLM_PROVIDER=ollama

# LLM model name
LLM_MODEL=llama3

# ===================
# DATABASE (Optional overrides)
# ===================

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=apexwatch
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# ClickHouse
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=apexwatch
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=clickhouse

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ===================
# MONITORING SETTINGS
# ===================

# Wallet Monitor
POLL_INTERVAL_SECONDS=30
BLOCK_CONFIRMATION_COUNT=12

# Exchange Monitor
EXCHANGE_POLL_INTERVAL=60

# News Monitor
NEWS_POLL_INTERVAL=300
