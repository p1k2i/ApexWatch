						"url": {
							"raw": "{{CORE_URL}}/api/webhook/event",
							"host": [
								"{{CORE_URL}}"
							],
							"path": [
								"api",
								"webhook",
								"event"
							]
						},
						"description": "Send a wallet transfer event"
					}
				},
