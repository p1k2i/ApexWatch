			"item": [
				{
					"name": "Health Check",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{CORE_URL}}/health",
							"host": [
								"{{CORE_URL}}"
							],
							"path": [
								"health"
							]
						},
						"description": "Check Core Service health status"
					}
				},
				{
					"name": "Send Event (Webhook)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"type\": \"price_change\",\n  \"data\": {\n    \"token_id\": \"{{TOKEN_ID}}\",\n    \"exchange\": \"binance\",\n    \"old_price\": 1.0,\n    \"new_price\": 1.05,\n    \"change_percent\": 5.0,\n    \"volume\": 1000000,\n    \"timestamp\": \"{{$isoTimestamp}}\"\n  }\n}"
						},
						"url": {
							"raw": "{{CORE_URL}}/api/webhook/event",
							"host": [
								"{{CORE_URL}}"
							],
							"path": [
								"api",
								"webhook",
								"event"
							]
						},
						"description": "Send an event to Core Service for processing"
					}
				},
				{
