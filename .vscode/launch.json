    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Dashboard (Streamlit)",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/services/dashboard/app.py",
                "--server.port=8501",
                "--server.address=localhost"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/services/dashboard",
            "console": "integratedTerminal"
        }
    ]
}
